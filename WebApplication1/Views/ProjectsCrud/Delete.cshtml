@model WebApplication1.Models.Project

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/css/PageCard/PageCard.css" />
<link href="/css/CrudTable/style.css" rel="stylesheet" />




<div class="CardContainer">
    <div class="CardSection">
        <div class="Inputsbody">
            <h1 style="position:center">Supprimer le Project</h1>
            <div class="form__group field">
                <div class="Imgcontainer">
                    <div class="wrapper">
                        <div class="image">
                            <img id="Image" src="data:image/jpeg;base64,@Convert.ToBase64String(@Model.Image)" alt="">
                        </div>
                        <div class="content">
                            <div class="icon">
                                <i class="fas fa-cloud-upload-alt"></i>
                            </div>
                            <div class="text">
                                No file chosen, yet!
                            </div>
                        </div>
                        <div id="cancel-btn">
                            <i class="fas fa-times"></i>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form__group field">
                <input asp-for="Title" type="text" class="form__field" placeholder="Titre" disabled />
                <label for="name" class="form__label">Titre</label>
            </div>
            <div class="form__group field">
                <input asp-for="SubTitle" type="text" class="form__field" placeholder="Titre" disabled />
                <label for="name" class="form__label">Sous-Titre</label>
            </div>
            <div class="form__group field">
                <input asp-for="Description" type="text" class="form__field" placeholder="Description" disabled />
                <label for="name" class="form__label">Description</label>
            </div>
            <div class="form__group field">
                <input value="@Model.FilePath.Split(@"\").Last()" type="text" class="form__field" placeholder="Description" readonly disabled required />
                <label for="name" class="form__label">Nom Du Fichier</label>
            </div>
            <div class="form__group field">
                <h3>Etes-vous sur de vouloir supprimer ce Project?</h3>
                <div>
                    <form style="text-align:center;" asp-action="Delete">
                        <input id="submit" type="submit" asp-for="Id" asp-route-id="@Model.Id" value="@Model.Id " hidden />
                        <button style="width:100%;" value="Supprimer" class="btn btn-danger">Supprimer Le Project</button>
                        <a asp-action="Index" asp-controller="ProjectsCrud">Retourner a la liste des Projects</a>
                    </form>
                </div>
                <label></label>
            </div>
        </div>
    </div>
</div>

<script>
    $('.btn').click(function () {
        $('#submit').click();
    });
</script>