
@model IQueryable<WebApplication1.Models.QuiSommeNous.ArticlePresentation.Paragraph>

<link rel="stylesheet" href="~/css/PageCard/PageCard.css" />

<link rel="stylesheet" href="~/css/CrudTable/style.css">




<div class="CardContainer">
    <div class="CardSection">
        <div class="Tablecontainer">
            <div class="row justify-content-center">
                    <h2 style="font-size:60px;" class="heading-section">Liste des Paragraphs</h2>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="table-wrap">
                        <table class="table table-responsive-xl">
                            <thead>
                                <tr>
                                    <th>Paragraph</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {

                                    <tr class="alert" role="alert">
                                        <td>@item.ParagraphContent...</td>
                                        <td class="status"><button asp-route-id="@item.Id" value="@item.Id" class="btn mb-3 mr-3 btn-success btn-Modifier"><span class="text">Modifier</span></button></td>
                                        <td class="status"><button  asp-route-id="@item.Id" value="@item.Id"  class="btn mb-3 mr-3 btn-danger btn-Supprimer"><span class="text">Supprimer</span></button></td>
                                        <td>
                                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                                <span aria-hidden="true"><i class="fa fa-close"></i></span>
                                            </button>
                                        </td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                    <button value="@ViewBag.SectionId" id='NouvelleParagraphButton' class="btn mb-3 mr-3 btn-success "><span class="text">Nouveaux Paragraph</span></button>
                    <a asp-action="Index" asp-controller="PresentationCrud" >Retourner a la liste des Section</a>
                </div>
            </div>
        </div>
    </div>
</div>


<script type="text/javascript">


    //$('.btn-Supprimer').click(function () {
    //    $('#submit').click();
    //});

    $("#NouvelleParagraphButton").on("click", function (evt) {
            var clicked_button = $(this);
            window.location.href = '@Url.Action("CreateParagraph", "PresentationCrud", new {id = "ID"})'.replace("ID", clicked_button.attr("value"));
        });


        //get clicked button value and send to view with id of clicked item
        $(".btn-Modifier").on("click", function (evt) {
            var clicked_button = $(this);
            window.location.href = '@Url.Action("EditParagraph", "PresentationCrud", new {id = "ID"})'.replace("ID", clicked_button.attr("value"));
        });


    $(".btn-Supprimer").on("click", function (evt) {
        var clicked_button = $(this);
            window.location.href = '@Url.Action("DeleteParagraph", "PresentationCrud" , new { id = "ID" })'.replace("ID", clicked_button.attr("value"));
        });


</script>
