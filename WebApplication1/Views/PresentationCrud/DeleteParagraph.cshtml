@model WebApplication1.Models.QuiSommeNous.ArticlePresentation.Paragraph


<link rel="stylesheet" href="~/css/PageCard/PageCard.css" />
<link rel="stylesheet" href="~/css/PageCard/css/style.css" />
<link rel="stylesheet" href="~/css/Paragraph/ParagraphStyle.css" />


<style>
    .area {
        overflow: hidden;
        word-wrap: break-word;
        resize: vertical;
        height: 500px;
        width: 735px;
        overflow: hidden;
        background-color: #FFF;
        color: #222;
        font-family: Courier, monospace;
        font-weight: normal;
        font-size: 24px;
        line-height: 40px;
        padding-left: 100px;
        padding-right: 100px;
        padding-top: 45px;
        padding-bottom: 34px;
        background-image: url(https://static.tumblr.com/maopbtg/E9Bmgtoht/lines.png), url(https://static.tumblr.com/maopbtg/nBUmgtogx/paper.png);
        background-repeat: repeat-y, repeat;
        -webkit-border-radius: 12px;
        border-radius: 12px;
        -webkit-box-shadow: 0px 2px 14px #000;
        box-shadow: 0px 2px 14px #000;
        border-top: 1px solid #FFF;
        border-bottom: 1px solid #FFF;
    }
</style>

<div class="CardContainer">
    <div class="CardSection">
        <div class="Inputsbody">
            <h1 style="position:center">Supprimer le paragraph</h1>
            <div class="form__group field">
                <div id="paper" method="get" action="">
                    @Html.TextAreaFor(x => x.ParagraphContent, new { @class = "area", disabled = true })
                </div>
            </div>
            <div class="form__group field">
                <h3>Etes-vous sur de voulpir supprimer le paragraph?</h3>
                <div>
                    <form  method="post">
                        <input id="submit" value="@Model.Id " hidden />
                        <button class="btn mb-3 mr-3 btn-danger btn-Supprimer"><span class="bg-float"></span><span class="text">Supprimer</span></button>
                        <a asp-action="IndexParagraph" asp-controller="PresentationCrud" asp-route-id="@ViewBag.SectionId">Retourner a la liste des Paragraphs</a>
                    </form>
                </div>
                <label></label>
            </div>
        </div>
    </div>
</div>


<script>

    $('.btn').click(function () {
        $('#submit').click();
    });

</script>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
